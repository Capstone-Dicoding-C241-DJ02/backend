generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Job {
  id              Int          @id @default(autoincrement())
  title           String
  desc            String
  business_sector String
  logo            String?
  city            String
  leaderboard     Leaderboard? @relation(fields: [leaderboardId], references: [id])
  leaderboardId   Int?         @unique

  @@map("jobs")
}

model Leaderboard {
  id         Int         @id @default(autoincrement())
  candidates Candidate[]
  jobId      Int         @unique
  Job        Job?

  @@map("leaderboards")
}

model Candidate {
  id               Int         @id @default(autoincrement())
  fullname         String
  title            String
  email            String
  phone            String
  additional_link  String?
  passphoto        String?
  cv_name          String
  cv_summary       String      @db.Text
  match_percentage Int
  leaderboards     Leaderboard @relation(fields: [leaderboardId], references: [id])
  leaderboardId    Int

  @@map("candidates")
}
